<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/liner_basket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/btn_categories"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/nameShops_item_basket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Магазин"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold|italic"
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/item_image_basket"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="7dp"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/itemtextnamebasket"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:text="name productihijijijisadsaaasssssssssk"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textStyle="bold|italic" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/price_item_basket"
                        android:text="Цена:"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold|italic"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/price2_item_basket"
                        android:text="200"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold|italic"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/discount_price_item_basket"
                        android:text="200"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold|italic"
                        android:visibility="gone" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="руб."
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold|italic"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/price3_item_basket"
                        android:text="за"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold|italic"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/price4_item_basket"
                        android:gravity="center"
                        android:text="100 грамм"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold|italic"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/minus_item_basket"
                        android:background="@drawable/minus"
                        />
                    <TextView
                        android:id="@+id/kol2_item_basket"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="12dp"
                        android:text="1"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold|italic" />
                    <TextView
                        android:id="@+id/kol3_item_basket"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:gravity="center"
                        android:text="шт."
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold|italic" />
                    <TextView
                        android:id="@+id/plus_item_basket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:gravity="center"
                        android:background="@drawable/plus" />
                </LinearLayout>
                <TextView
                    android:id="@+id/itemtextbottombasket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:text="@string/itemtextbottombasket"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14dp"
                    android:textStyle="bold|italic"
                    android:background="@drawable/btn_del_product"
                    android:padding="6dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>