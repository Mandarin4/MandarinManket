<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/history_of_orders_liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/btn_categories"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Заказ №"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:textStyle="bold|italic"
                android:gravity="center"/>
            <TextView
                android:id="@+id/History_of_orders_text_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:textStyle="bold|italic"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Цена: "
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:textStyle="bold|italic"
                android:gravity="center"/>
            <TextView
                android:id="@+id/History_of_orders_text_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="154"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:textStyle="bold|italic"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="руб."
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:textStyle="bold|italic"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Дата: "
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:textStyle="bold|italic"
                android:gravity="center"/>
            <TextView
                android:id="@+id/History_of_orders_text_price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21.02.2021 18.22.54"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:textStyle="bold|italic"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/History_of_orders_text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Статус заказа: "
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:textStyle="bold|italic"
                android:gravity="center"/>
            <TextView
                android:id="@+id/History_of_orders_text_status2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выполнен."
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:textStyle="bold|italic"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>