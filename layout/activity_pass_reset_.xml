<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Users.Pass_Reset_Activity"
    android:background="@drawable/bg"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/relativ">

    <Button
        android:id="@+id/btn_back_reset_pass"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/back" />

    <TextView
        android:id="@+id/reset_pass_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/reset_pass"
        android:textSize="35sp"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:layout_below="@id/btn_back_reset_pass"/>

    <EditText
        android:id="@+id/btn_reset_pass_email_input"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/btn_register"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/reset_pass_btn_email"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_reset_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_margin="25dp"
        android:padding="20dp"
        android:background="@drawable/btn_sign_in"
        android:text="@string/btn_reset_pass"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>