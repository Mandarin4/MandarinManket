<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".UI.Users.AboutCompany_Activity">

    <TextView
        android:id="@+id/About_Company_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/cancel" />
    <TextView
        android:id="@+id/text_About_Company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_About_Company"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/imageView_About_Company"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/text_About_Company"
        app:srcCompat="@android:drawable/screen_background_light">
    </ImageView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/text_About_Company">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_About_Company_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/text_About_Company_text"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/text_About_Company_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_About_Company_text2"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold|italic"/>
        <TextView
            android:id="@+id/text_About_Company_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_About_Company_text3"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/text_About_Company_text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_About_Company_text4"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold|italic"/>
        <TextView
            android:id="@+id/text_About_Company_text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_About_Company_text5"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/text_About_Company_text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_About_Company_text6"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold|italic"/>
        <TextView
            android:id="@+id/text_About_Company_text7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_About_Company_text7"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/text_About_Company_text8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_About_Company_text8"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold|italic"/>
        <TextView
            android:id="@+id/text_About_Company_text9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/text_About_Company_text9"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="italic"/>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>