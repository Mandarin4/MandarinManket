<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg">

    <Button
        android:id="@+id/buttonBasket"
        android:layout_width="33dp"
        android:layout_height="39dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/exit"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/nameUserFormBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/textBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textBasket"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageViewBasket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/buttonBasket"
        app:srcCompat="@android:drawable/screen_background_light">
    </ImageView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rs_list_Basket"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/buttonBasket"
        android:layout_above="@+id/total">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/buttonBasket"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/basket_fragment_ismpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ваша корзина пустая!!!"
            android:textStyle="bold|italic"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:visibility="invisible"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/total"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">
       <!-- <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Доставка:"
                android:textStyle="bold|italic"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/dost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Доставка не выбрана"
                android:textStyle="bold|italic"
                android:textColor="@color/color_dost"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/total2"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Кол-во товаров: "
                android:textStyle="bold|italic"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/total3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold|italic"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/total4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" шт."
                android:textStyle="bold|italic"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/total5"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ИТОГО: "
                android:textStyle="bold|italic"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/total6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold|italic"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/total7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" руб."
                android:textStyle="bold|italic"
                android:textColor="@android:color/black"/>
        </LinearLayout>


        <TextView
            android:id="@+id/fragment_basket_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/fragment_basket_button"
            android:background="@drawable/btn_add_product"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:textStyle="bold|italic"
            android:textColor="@android:color/holo_green_light"
            android:textSize="14dp"
            android:padding="6dp"
            />
    </LinearLayout>
</RelativeLayout>