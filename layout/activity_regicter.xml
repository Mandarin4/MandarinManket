<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Users.RegicterActivity"
    android:background="@drawable/bg"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/relativ"
    >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
    <Button
        android:id="@+id/btn_back_register"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/back"
        android:layout_gravity="left"/>
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/logo"
        android:textSize="35dp"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:layout_below="@+id/logo_image"/>

    <EditText
        android:layout_marginTop="15dp"
        android:id="@+id/btn_register_user_name_input"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/btn_register"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/btn_register_user_name_input"
        android:inputType="text"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_above="@+id/btn_register_phone_input"/>

    <EditText
        android:id="@+id/btn_register_email_input"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_register"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/btn_register_email_input"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_above="@+id/btn_register_pass_input2"/>

    <EditText
        android:id="@+id/btn_register_phone_input"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_above="@id/btn_register_email_input"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_register"
        android:hint="@string/btn_phone"
        android:inputType="phone"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:passwordToggleEnabled="true"
        android:id="@+id/btn_register_pass_input2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_above="@id/btn_register"
        android:inputType="textPassword"
        android:textColorHint="@android:color/white"
        app:hintEnabled="false"
        app:passwordToggleDrawable="@drawable/icon_selector"
        app:passwordToggleTint="@android:color/white">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/btn_register_pass_input"
            android:hint="@string/btn_pass"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/btn_register"
            android:padding="20dp"
            android:ems="15" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_sign_in"
        android:padding="20dp"
        android:text="@string/btn_register"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>