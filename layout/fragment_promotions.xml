<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg">

    <Button
        android:id="@+id/buttonPromotions"
        android:layout_width="33dp"
        android:layout_height="39dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/exit"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/nameUserFormPromotions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/popylar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Популярные товары"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rs_list_product_popular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/popylar_text"
        android:layout_marginHorizontal="8dp"
        >
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:id="@+id/texthomePromotions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textpromotions"
        android:layout_below="@+id/rs_list_product_popular"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageViewPromotions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/texthomePromotions"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/screen_background_light"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rs_list_Promotions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/texthomePromotions"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        >

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>