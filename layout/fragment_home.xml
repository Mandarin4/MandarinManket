<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <Button
        android:id="@+id/buttonShops"
        android:layout_width="33dp"
        android:layout_height="39dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/exit"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/nameUserFormShops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/texthomeShops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texthome"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageViewShops"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/texthomeShops"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/screen_background_light"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rs_list_shops2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/buttonShops">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>